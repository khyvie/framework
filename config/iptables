# IPv4
iptables -t nat -A INPUT -p tcp --dport 14427 -j SNAT --to-source 10.131.0.0-10.131.255.255
iptables -t nat -A INPUT -p udp --dport 19132 -j SNAT --to-source 10.131.0.0-10.131.255.255
iptables -A INPUT -p tcp --syn --dport 14427 -m connlimit --connlimit-above 5 --connlimit-mask 32 -j REJECT --reject-with tcp-reset
iptables-save > /etc/iptables/rules.v4

# IPv6
ip6tables -t nat -A INPUT -p tcp --dport 14427 -j SNAT --to-source fdef:dead:af::1-fdef:dead:af::ffff
ip6tables -t nat -A INPUT -p udp --dport 19132 -j SNAT --to-source fdef:dead:af::1-fdef:dead:af::ffff
ip6tables -A INPUT -p tcp --syn --dport 14427 -m connlimit --connlimit-above 5 --connlimit-mask 64 -j REJECT --reject-with tcp-reset
ip6tables-save > /etc/iptables/rules.v6
